<Window x:Class="Udp_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udp_Client"
        mc:Ignorable="d"
        Title="ScreenWindow" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Name="ScreenImage" Stretch="UniformToFill"  ></Image>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button  Margin="5" Foreground="Wheat" Background="Red" Content="ScreenShoot" FontSize="25" Width="200" HorizontalAlignment="Right" Click="Button_Click"></Button>
            <Button Margin="5" Foreground="Wheat" Background="Blue"  Content="Save" FontSize="25" Width="200" HorizontalAlignment="Right" Click="Save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
